    <link href="css/bootstrap.min.css" rel="stylesheet" />
    <!-- <link href="css/styles.css" rel="stylesheet" /> -->

    <style>
      body{
        background-color: rgba(255, 255, 255, 0.9);
        align-items: center;
        padding: 40px 0;
        
      }
    </style>

    <!-- Custom styles for this template -->
    <link href="css/sign-in.css" rel="stylesheet" />
  </head>
  <body class="d-flex align-items-center w-90 ">
    <div class="container">
      <div class="row">
        <div class="col-12 shadow-lg p-3 mb-5">
          <div class="card border-primary">
            <div class="card-header bg-primary text-white">
                Regístrate
            </div>
            <div class="card-body text-primary">
              <form id="form" action="/register" method="POST">
                <div class="mb-3">
                  <label for="name" class="form-label"> Nombre Completo</label>
                  <input type="text" id="name" name="name" class="form-control" >
                </div>
                <div class="mb-3">
                  <label for="user" class="form-label"> Cuenta de Usuario</label>
                  <input type="text" id="user" name="user" class="form-control"  >
                </div>
                <div class="mb-3">
                  <label for="pass" class="form-label"> Password </label>
                  <input type="password" id="pass" name="pass" class="form-control" >
                </div>
                <div class="card  d-flex align-items-center flex-column justify-content-center">
                <div class="mt-3">
                  <input type="submit" class="btn btn-primary" value="Registrar" >
                
              </form>
                <a class="btn btn-danger" href="/" > Cancelar </a>
              </div>
                <p class="text-black mt-4 text-center ">Si ya tienes una cuenta logueate <a href="/login">acá </a></p>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if(alert) { %>
      <script>
        const form = document.getElementById('form')
        form.addEventListener('submit', (e) => {
          e.preventDefault()
        })

        Swal.fire({
          title: "<%= alertTitle %>",
          text: "<%= alertMessage %>",
          icon: "<%= alertIcon %>",
          showConfirmButton: "<%= showConfirmButton %>",
          timer: "<%= timer %>"
        }).then(()=>{
          window.location = '/<%= ruta %>'
        })
      </script>  
    <% } %>
  </body>
</html>
